<h1>Listing hosts</h1>

<% for host in @hosts %>
  <div>
    <h2><%= link_to host.name, root_url(:host => host.subdomain + '.' + request.domain) %></h2>
    <div class="actions">
      <%= link_to "Edit", edit_host_path(host) %> |
      <%= link_to "Destroy", host, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div>
<% end %>

