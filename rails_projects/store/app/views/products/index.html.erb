<h1>Listing products</h1>

<% form_tag products_path, :method => :get, :remote => true do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="products">
  <%= render @products %>
</div>

<p>
<%= link_to 'New Product', new_product_path %> |
<%= link_to 'Orders', orders_path %>
</p>
